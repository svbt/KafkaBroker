# Start cluster
docker-compose up -d

# Create topics (only once)
docker exec -it kafka1 kafka-topics \
  --create --topic reminders \
  --partitions 2 --replication-factor 2 \
  --bootstrap-server localhost:9092,localhost:9093

docker exec -it kafka1 kafka-topics \
  --create --topic playlist \
  --partitions 2 --replication-factor 2 \
  --bootstrap-server localhost:9092,localhost:9093

# Stop cluster
docker-compose down

# Restart later (data still there)
docker-compose up -d
